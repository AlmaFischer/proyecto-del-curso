<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title || "DocLocker" %></title>
    <!-- Bootstrap 5 CSS desde CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <header>
      <!-- Navbar con Bootstrap 5 -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand" href="/">DocLocker</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/">Inicio</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    
    <!-- Contenedor principal para inyectar el contenido de la vista -->
    <main class="container my-4">
      <%- body %>
    </main>
    
    <footer class="bg-light py-3">
      <div class="container text-center">
        <p class="mb-0">© 2025 DocLocker</p>
      </div>
    </footer>
    
    <!-- Bootstrap 5 Bundle con Popper desde CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Axios desde CDN -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script type="module">
      import { html, render } from 'https://cdn.jsdelivr.net/npm/lit-html@2.8.0/lit-html.min.js?module';
      // Exponemos las funciones para que estén disponibles globalmente
      window.litHtml = { html, render };
    </script>    
  </body>
</html>
